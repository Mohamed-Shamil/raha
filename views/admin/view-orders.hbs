<body>



    <main id="main" class="main">

        <div class="pagetitle">
            <h1>View Orders</h1>
          
        </div><!-- End Page Title -->









        <div class="card">
            <div class="card-body">
                <h5 class="card-title">Orders</h5>

                <!-- Primary Color Bordered Table -->
                <table class="table   datatable table-hover ">
                    <thead>
                        <tr>
                            <th scope="col">SI No</th>
                            <th scope="col">Date</th>
                            <th scope="col">Customers</th>
                            <th scope="col">Address</th>
                           <th scope="col">Total Amount</th>
                           <th scope="col"></th> 
                          
                        </tr>
                    </thead>
                    {{#each orders}}
                    <tbody>
                        <tr>
                            <td scope="row">{{'inc' @index}}</td>
                            <td>{{this.date}} </td>
                            <td>{{this.deliveryDetails.firstName}} {{this.deliveryDetails.lastName}}</td>
                            <td>{{this.deliveryDetails.address}}</td>
                            <td>{{this.totalAmount}}</td>
                            <td><a class="btn btn-success"  href="/admin/viewOrderProducts/{{this._id}}">View Products</a></td>
                        </tr>
                    </tbody>
                    {{/each}}
                </table>
              

                <!-- End Primary Color Bordered Table -->
                
            </div>
        </div>



       


